<table class="table table-striped table-hover text-center ">
<h1 class="text-center">トピック一覧</h1>

    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td class="lead"><%= link_to topic.title, topic %></td> 
          <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_topic_path(topic), :class => 'btn btn-default btn-sm'%></td>
          <td><%= link_to 'Delete', topic, method: :delete, :class => 'btn btn-default btn-sm', data: { confirm: 'Are you sure?' } %></td>
          <% end %>      
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <div class="text-right">
    <%= link_to '新しいトピックを作成', new_topic_path, :class => 'btn btn-default' %>
  </div>